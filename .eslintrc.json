{
  "env": {
    "es6": true,
    "browser": true
  },

  "globals": {
    "document": true,
    "navigator": true,
    "window": true,
    "chrome": true
  },

  "rules": {
    "semi": [2, "never"],
    "indent": [2, 4, { "SwitchCase": 1 }],
    "quotes": [2, "single"],
    "no-undef": 2,
    "no-unused-vars": 2
  }
}
